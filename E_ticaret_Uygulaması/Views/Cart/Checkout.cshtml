@model E_ticaret_Uygulaması.Models.ShippingDetails
@{
    ViewBag.Title = "Checkout";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Sipariş Bilgileriniz</h2>
            <p>Lütfen sipariş bilgierinizi doldurunuz.</p>
            <hr />

            @using (Html.BeginForm())
            {
                @Html.ValidationSummary()

                <div class="form-group">
                    <label> Username</label>
                    @Html.TextBoxFor(x => x.Username, new { @class = "form-control" })

                </div>

                <div class="form-group">
                    <label> Adres Tanımı</label>
                    @Html.TextBoxFor(x => x.AdresBasligi, new { @class = "form-control" })

                </div>

                <div class="form-group">
                    <label> Adres </label>
                    @Html.TextBoxFor(x => x.Adres, new { @class = "form-control" })

                </div>

                <div class="form-group">
                    <label> Şehir </label>
                    @Html.TextBoxFor(x => x.Sehir, new { @class = "form-control" })

                </div>

                <div class="form-group">
                    <label> Semt </label>
                    @Html.TextBoxFor(x => x.Semt, new { @class = "form-control" })

                </div>
                <div class="form-group">
                    <label> Mahalle </label>
                    @Html.TextBoxFor(x => x.Mahalle, new { @class = "form-control" })

                </div>
                <div class="form-group">
                    <label> PostaKodu </label>
                    @Html.TextBoxFor(x => x.PostaKodu, new { @class = "form-control" })

                </div>
                <div class="form-group row">
                    <labelfor ="inputEmail3" class="col-sm-2 col-form-label"></labelfor>
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-primary">Kargola</button>
                    </div>
                </div>

            }

        </div>
    </div>

</div>
 
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

